@inproceedings{ma_smart_2023,
	address = {Delft, Netherlands},
	title = {{SMART} {Credentials} in the {Multi}-queue of {Slackness} (or {Secure} {Management} of {Anonymous} {Reputation} {Traits} without {Global} {Halting})},
