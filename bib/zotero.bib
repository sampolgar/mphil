	year = {2022},
	note = {Conference Name: IEEE Access},
	keywords = {Access control, Attribute-based, Computational efficiency, Cryptography, Elliptic curve cryptography, Elliptic curves, LSSS matrix, Probabilistic logic, Public key, blind signature, elliptic curve cryptography (ECC), elliptic curve discrete logarithm problem (ECDLP), key policy attribute-based signature},
